{
    "extends": ["airbnb", "prettier", "prettier/react"],
    "parser": "babel-eslint",
    "rules": {
        "prettier/prettier": "error",
        "comma-dangle": [2, "always-multiline"],
        "react/jsx-filename-extension": [1, { "extensions": [".js"] }],
        "react/sort-comp": [
            2,
            {
                "order": [
                    "constructor",
                    "state",
                    "static-methods",
                    "render",
                    "/^render.+$/",
                    "/^(get|set)(?!(InitialState$|DefaultProps$|ChildContext$)).+$/",
                    "lifecycle",
                    "/^on.+$/",
                    "everything-else"
                ]
            }
        ]
    },
    "env": {
        "browser": true
    },
    "plugins": ["prettier"]
}
